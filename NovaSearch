<body>

  <header>
    <h1>Nova Search</h1>
  </header>

  <div class="search-bar">
    <input type="text" id="searchBox" placeholder="Search..." />
    <button onclick="performSearch()">Search</button>
  </div>

  <div class="container">
    <div class="left" id="results"></div>
    <div class="right" id="knowledgeGraph"></div>
  </div>

  <script>
    async function performSearch() {
      const query = document.getElementById("searchBox").value.trim();
      const resultsDiv = document.getElementById("results");
      const kgDiv = document.getElementById("knowledgeGraph");

      if (!query) return;

      resultsDiv.innerHTML = '<div class="loader">Searching Nova...</div>';
      kgDiv.innerHTML = "";

      // === Wikipedia Knowledge Graph ===
      try {
        const wikiResp = await fetch(`https://en.wikipedia.org/api/rest_v1/page/summary/${encodeURIComponent(query)}`);
        const wikiData = await wikiResp.json();

        if (wikiData && wikiData.extract && wikiData.thumbnail) {
          kgDiv.innerHTML = `
            <div class="kg-box">
              <img src="${wikiData.thumbnail.source}" alt="${wikiData.title}" />
              <div class="kg-title">${wikiData.title}</div>
              <div class="kg-summary">${wikiData.extract}</div>
            </div>
          `;
        }
      } catch (e) {
        kgDiv.innerHTML = "";
      }

      // === Google Custom Search ===
      const url = `https://www.googleapis.com/customsearch/v1?key=AIzaSyCti9lzEPu9MedY5Eprbzr4niLVYoSpDjA&cx=377b0369704c54b74&q=${encodeURIComponent(query)}`;
      try {
        const res = await fetch(url);
        const data = await res.json();

        if (!data.items || data.items.length === 0) {
          resultsDiv.innerHTML = "<p>No results found</p>";
          return;
        }

        let html = "";
        data.items.forEach(item => {
          const domain = new URL(item.link).hostname;
          html += `
            <div class="result-item">
              <div class="link">
                <img src="https://www.google.com/s2/favicons?domain=${domain}" width="16">
                ${domain}
              </div>
              <a href="${item.link}" target="_blank">${item.title}</a>
              <div class="snippet">${item.snippet}</div>
            </div>
          `;
        });

        resultsDiv.innerHTML = html;

      } catch (err) {
        resultsDiv.innerHTML = "<p>Error loading results</p>";
      }
    }

    // Allow Enter key to search
    document.getElementById("searchBox").addEventListener("keydown", function (e) {
      if (e.key === "Enter") performSearch();
    });
  </script>

</body>
</html>
